  <script>
    function toggleSettingsDropdown() {
      console.log("Toggling settings dropdown");
      var dropdown = document.getElementById('settingsDropdown');
      dropdown.classList.toggle('show');
    }

    document.addEventListener('click', function(event) {
      var dropdown = document.getElementById('settingsDropdown');
      var btn = document.getElementById('settingsBtn');
      if (!btn.contains(event.target) && !dropdown.contains(event.target)) {
        dropdown.classList.remove('show');
      }
    });

    document.getElementById('suiviMenuLink').onclick = function(e) {
      console.log("Toggling Suivi menu");
      e.preventDefault();
      var menuItem = this.parentElement;
      var childMenu = document.getElementById('suiviChildMenu');
      var arrow = document.getElementById('suiviArrow');
      var isOpen = menuItem.classList.contains('open');
      if (isOpen) {
        menuItem.classList.remove('open');
        childMenu.style.display = 'none';
        arrow.style.transform = 'rotate(0deg)';
      } else {
        menuItem.classList.add('open');
        childMenu.style.display = 'block';
        arrow.style.transform = 'rotate(180deg)';
      }
    };

    // Load utilisations from localStorage
    let utilisations = [];
    try {
      const storedUtilisations = localStorage.getItem('utilisations');
      console.log("Raw localStorage data:", storedUtilisations);
      if (storedUtilisations) {
        utilisations = JSON.parse(storedUtilisations);
        console.log("Parsed utilisations from localStorage:", utilisations);
      } else {
        console.log("No utilisations found in localStorage");
      }
    } catch (error) {
      console.error("Error parsing utilisations from localStorage:", error);
    }

    // Get the utilisation ID from the URL
    const urlParams = new URLSearchParams(window.location.search);
    const numeroUtilisation = urlParams.get('id');
    console.log("URL Parameter ID:", numeroUtilisation);

    // Find the utilisation
    const utilisation = utilisations.find(u => u.numeroUtilisation === numeroUtilisation);
    console.log("Found utilisation:", utilisation);

    // Display the utilisation details
    if (utilisation) {
      document.getElementById('numeroUtilisation').textContent = utilisation.numeroUtilisation;
      document.getElementById('dateUtilisation').textContent = utilisation.dateUtilisation;
      document.getElementById('utilisateur').textContent = utilisation.utilisateur;
      document.getElementById('produit').textContent = utilisation.produit;
      document.getElementById('codeFormat').textContent = utilisation.codeFormat;
      document.getElementById('numeroPoincon1').textContent = utilisation.numeroPoincon1;
      document.getElementById('etat1').textContent = utilisation.etat1;
      document.getElementById('numeroPoincon2').textContent = utilisation.numeroPoincon2;
      document.getElementById('etat2').textContent = utilisation.etat2;
      document.getElementById('numeroLots').textContent = utilisation.numeroLots;
      document.getElementById('dateRetour').textContent = utilisation.dateRetour;
      document.getElementById('emplacementRetour').textContent = utilisation.emplacementRetour;
      document.getElementById('commentaire').textContent = utilisation.commentaire || 'Aucun commentaire';
    } else {
      document.getElementById('details-container').innerHTML = '<p>Utilisation non trouvée. Vérifiez que l\'utilisation existe dans la liste et que les données sont correctement sauvegardées.</p>';
    }

    // Check if jQuery loaded
    if (typeof jQuery === 'undefined') {
      console.error("jQuery failed to load. Check the path to ../vendors/jquery/dist/jquery.min.js");
    } else {
      console.log("jQuery loaded successfully");
    }
  </script>
